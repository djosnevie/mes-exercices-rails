<h1>Liste de Catégories</h1>
<div>
	<a href="<%= new_category_path %>" class="btn btn-primary">Créé une nouvelle catégorie</a> <br> <br>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nom</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
			<tr>
				<td><%= category.id %></td>
				<td><a href="<%= category_path(category.id) %>"><%= category.name %></a></td>
				<td><a href="<%= edit_category_path(category.id) %>" class="btn btn-info">Edit</a>  <a href="<%= category_path(category.id) %>" class="btn btn-danger" data-confirm="Etes-vous sur de supprimer la catégorie <%= category.name %>" data-method="DELETE">delete</a></td>
			</tr>
		<% end  %>
	</tbody>
</table>


